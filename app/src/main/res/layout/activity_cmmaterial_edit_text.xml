<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.cmMaterialEditText.CMMaterialEditTextActivity">

    <FrameLayout

        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.test.cmMaterialEditText.cmMaterialEditTextView
        android:id="@+id/cm_material_edittext"
        android:textSize="30sp"
        app:cmMaterialEditTextViewUserFloating="false"
        android:hint="CMMaterialEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>
